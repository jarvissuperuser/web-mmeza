{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "src",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 8081
    },
    "firestore": {
      "port": 8082
    },
    "hosting": {
      "port": 8090
    },
    "pubsub": {
      "port": 8083
    },
    "storage": {
      "port": 8084
    },
    "ui": {
      "enabled": true,
      "port": 8100
    }
  }
}
